<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxl.job.admin.mapper.XxlJobInfoExtMapper">

    <resultMap id="XxlJobInfoExt" type="com.xxl.job.admin.core.model.XxlJobInfoExt">
        <result column="id" property="id"/>

        <result column="job_id" property="jobId"/>
        <result column="calculate_model" property="calculateModel"/>

    </resultMap>

    <sql id="Base_Column_List">
        t.id,
        t.job_id,
        t.calculate_model
    </sql>

    <insert id="save" parameterType="com.xxl.job.admin.core.model.XxlJobInfoExt" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO XXL_JOB_QRTZ_TRIGGER_INFO_EXT (
            job_id,
            calculate_model
        ) VALUES (
            #{jobId},
            #{calculateModel}
        )
    </insert>

    <select id="loadById" parameterType="java.util.HashMap" resultMap="XxlJobInfoExt">
        SELECT
        <include refid="Base_Column_List"/>
        FROM XXL_JOB_QRTZ_TRIGGER_INFO_EXT AS t
        WHERE t.id = #{id}
    </select>

    <select id="loadByJobId" parameterType="java.util.HashMap" resultMap="XxlJobInfoExt">
        SELECT
        <include refid="Base_Column_List"/>
        FROM XXL_JOB_QRTZ_TRIGGER_INFO_EXT AS t
        WHERE t.job_id = #{jobId}
    </select>

    <update id="update" parameterType="com.xxl.job.admin.core.model.XxlJobInfoExt">
        UPDATE XXL_JOB_QRTZ_TRIGGER_INFO_EXT
        SET
            job_id          = #{jobCron},
            calculate_model = #{calculateModel}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.util.HashMap">
        DELETE
        FROM XXL_JOB_QRTZ_TRIGGER_INFO_EXT
        WHERE id = #{id}
    </delete>

</mapper>